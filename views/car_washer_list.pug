extends layout_reports
block content
    header.card-header
        h4.card-title Car Washer Details
    br
    nav
    #nav-tab.nav.nav-tabs(role='tablist')
        a#nav-profile-tab.nav-item.nav-link.active(href='/report/payout')  Car Washer Payout
        a#nav-contact-tab.nav-item.nav-link(href='/report/expenses-report') Expense report
        a#nav-contact-tab.nav-item.nav-link(href='/report/collection')  Collection Report
        a#nav-profile-tab.nav-item.nav-link(href='/report/washer-details') Washer Details
    #nav-tabContent.tab-content  
        br
        form.search(action='/report/payout')
            div.form-row
                div.col-md-8
                    input.form-control(type="date" name="searchdate" value=defaultDate)
                div.col-md-4
                    input.btn.btn-secondary.btn-block(type="submit")
        br
        table.table.table-bordered 
            thead
                tr
                    th Full Name 
                    th Number of cars
                    th Payout Amount
            tbody
            if washers.length
                each washer in washers
                    tr
                        td #{washer.details[0].lastname + " " + washer.details[0].firstname }
                        td #{washer.count}
                        td #{washer.totalPayout}
                tr
                    th(colspan=2) Total Payout 
                    td #{new Intl.NumberFormat().format(sumPayout.totalPayoutPerDay)}
                
                        