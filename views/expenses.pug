extends layout
block content 
    header.card-header
        h4.card-title Expenses registration
        if alert == "success"
            div.alert.alert-info Expenses added successfully
        if alert == 'error'
            div.alert.alert-danger An error occured,failed to add expense   
    form#my-form(action='/expenses' method='POST')
            div.form-row
                div.col.form-group
                    label Date of entry
                    input.form-control(name='dateofentry' type='date')
            div.form-row
                div.col.form-group
                    label Item type
                    select.form-control(name='itemtype')
                        option(value='detergent') Detergent
                        option(value='electricityunits') Electricity units 
                        option(value='polish') Polish 
                        option(value='Waterunits') Water units 
                        option(value='sponges') Sponges
            div.form-row
                div.col.form-group
                    label Amount
                    input.form-control(name='amount' type='number')                    
            div.form-row
                div.col.form-group
                    button.btn.btn-secondary.btn-block Add expense           