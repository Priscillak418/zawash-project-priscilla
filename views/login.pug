extends layout_login 
block content
            form(action='/login' method='POST')
                div.row.justify-content-center
                    div.class-md-6
                        div.card-body
                            header.card-header
                                h4.card-title LOGIN
                                if alert == "error"
                                    div.alert.alert-danger An error occurred, invalid username or password
                                br
                            div.form-group
                                label User name
                                input.form-control(name='username')
                                small#usernameHelp.form-text.text-muted We'll never share your username with anyone else.
                            div.form-group
                                label Password
                                input.form-control(name='password' type='password')
                            div.form-check
                                input.form-check-input#exampleCheck1(type='checkbox')
                                label.form-check-label(for='exampleCheck1') Check me out
                            div.class-md-6
                                button.btn.btn-secondary.btn-block Submit