extends layout 
block content
    header.card-header
        h4.card-title Register vehicle
        if alert == "success"
            div.alert.alert-info Vehicle added successfully
        if alert == 'error'
            div.alert.alert-danger An error occured,failed to add vehicle  
    section.container   
        form#my-form(action='/vehicle' method='POST')
            div.form-row
                div.col.form-group
                    label Time of arrival
                    input.form-control(type='time' name='timeofarrival')
                div.col.form-group
                    label Date of arrival
                    input.form-control(type="date" name='dateofarrival')
            div.form-row
                div.col.form-group
                    label Number plate
                    input.form-control( name='numberplate')
                div.col.form-group
                    label color
                    input.form-control(name='color')
            div.form-row
                div.col.form-group
                    label(for='make') Make
                    input.form-control(name='make')
            div.form-group
                label Washer
                select.form-control(name='washer')
                    each washer in washers
                        option(value=washer._id) #{washer.firstname +' '+ washer.lastname}
            div.form-row
                div.col.form-group
                    label Wash package
                    select.form-control(name='washpackage')
                        option(value='smallcars') Small cars-10000/=
                        option(value='medium') Medium cars-15000/=
                        option(value='fullwash') Full wash-20000/=
                        option(value='bodaboda') BodaBoda-5000/=
                        option(value='engine') Engine-10000/=
            div.class-md-6
                button.btn.btn-secondary.btn-block Register